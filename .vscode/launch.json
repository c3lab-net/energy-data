    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: gunicorn api",
            "type": "python",
            "request": "launch",
            "program": "${userHome}/anaconda3/envs/flask/bin/gunicorn",
            "args": [
                "api:create_app()",
                "--bind=localhost:8082",
                "-w=1",
                "--log-level=debug",
                "-t=3600",
                "--reload"
            ],
            "justMyCode": false,
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "api/__init__.py",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                // "--no-debugger",
                "--port",
                "8082",
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}